<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kk.qisheng.MainActivity">

    <Button
        android:id="@+id/btn_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简单绘制view" />

    <Button
        android:id="@+id/btn_loading1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="两圆加载view" />

    <Button
        android:id="@+id/btn_loading3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="三圆加载view" />

    <Button
        android:id="@+id/btn_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="path绘制View" />

    <Button
        android:id="@+id/btn_loading4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="橡皮弹球加载view" />

    <Button
        android:id="@+id/btn_loading6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="粘性球加载view" />
</LinearLayout>
